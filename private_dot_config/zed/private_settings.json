// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Tokyo Night",
  "vim_mode": true,
  "copilot": {
    "disabled_globs": [".env"]
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false
  },
  "ui_font_size": 13,
  "buffer_line_height": {
    "custom": 1.5
  },
  "buffer_font_size": 13,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_features": {
    "calt": false,
    "liga": false
  },
  "features": {
    "copilot": true
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "default_open_ai_model": "gpt-4-1106-preview",
    "version": "2"
  },
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    "dock": "left"
  },
  "deno": {
    "enable": false
  },
  "format_on_save": "on",
  "language_overrides": {
    "JavaScript": {
      "formatter": "prettier"
    },
    "JSON": {
      "formatter": "prettier"
    },
    "HTML": {
      "formatter": "prettier"
    },
    "TypeScript": {
      "formatter": "prettier"
    },
    "Svelte": {
      "formatter": "prettier",
      "lsp": {
        "typescript-language-server": {
          "initialization_options": {
            "preferences": {
              "includeInlayParameterNameHints": "all",
              "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
              "includeInlayFunctionParameterTypeHints": true,
              "includeInlayVariableTypeHints": true,
              "includeInlayVariableTypeHintsWhenTypeMatchesName": false,
              "includeInlayPropertyDeclarationTypeHints": true,
              "includeInlayFunctionLikeReturnTypeHints": true,
              "includeInlayEnumMemberValueHints": true,
              "includeInlayEnumMemberDeclarationTypes": true
            }
          }
        }
      }
    },
    "CSS": {
      "formatter": "prettier"
    },
    "TSX": {
      "formatter": "prettier"
    }
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "right",
    "default_width": 200,
    "line_height": "standard"
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
    "eslint": {
      "enabled": true,
      "autoFixOnSave": true,
      "autoFixOnFormat": true,
      "autoFixOnFormatDelay": 200,
      "initialization_options": {
        "checkOnSave": {
          "command": "eslint"
        }
      },
      "probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown",
        "svelte"
      ],
      "validate": ["javascript", "typescript", "javascriptreact", "svelte"]
    }
  }
}
